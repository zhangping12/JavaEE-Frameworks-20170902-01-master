<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- MyBatis 映射文件 定义 SQL 语句 -->
<mapper namespace="user">
    <insert id="create" parameterType="model.User" useGeneratedKeys="true" keyProperty="id">
        insert into db.user
            value (null, #{username}, #{password})
    </insert>
    <update id="modify" parameterType="model.User">
        update db.user
        set
            username = #{username},
            password = #{password}
        where
            id = #{id}
    </update>
    <delete id="remove" parameterType="model.User">
        delete from db.user
        where id = #{id}
    </delete>
    <select id="queryAll" resultType="model.User">
        select *
        from db.user
        order by id desc
    </select>
    <select id="queryById" parameterType="int" resultType="model.User">
        select *
        from db.user
        where id = #{id}
    </select>
    <select id="signIn" parameterType="model.User" resultType="model.User">
        SELECT *
        FROM db.user
        WHERE username = #{username} AND password = #{password}
    </select>
</mapper>